{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["typings/*", "node_modules/@types/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
